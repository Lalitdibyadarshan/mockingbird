{
  "manifest_version": 3,
  "name": "Mocking Bird",
  "version": "1.0",
  "description": "Mocking made easy",
  "icons": {
    "128": "logo128.png",
    "48": "logo48.png",
    "16": "logo16.png"
  },
  "action": {
    "default_icon": {
      "128": "logo128.png",
      "48": "logo48.png",
      "16": "logo16.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "https://www.google.com/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "http://localhost:*/*",
        "https://localhost:*/*",
        "https://www.google.com/*"

      ],
      "js": ["static/js/content.js"],
      "css": ["static/css/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [ 
        "/static/js/inject.js",
        "/static/data/*"
      ],
      "matches": [
        "https://www.google.com/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*.google.com/*"
    ]
  }
}


